;foreground = ${xrdb:color7:#222}
foreground = #002b36
foreground-alt = #555
;fdf6e3
primary = #ffb52a
secondary = #e60053
alert = #e60053bd2c40

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
bottom = true
width = 100%:
height = 28
;offset-x = 2%
radius = 8.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

