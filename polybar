font-0 = fixed:pixelsize=10;2
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;2

modules-left = i3 
modules-center = 
modules-right = battery-combined-shell wlan filesystem memory date 

